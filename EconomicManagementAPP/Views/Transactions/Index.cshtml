@model IEnumerable<Transactions>
@{
    ViewData["Title"] = "Transactions";
}
<h1 class="text-center">Transactions</h1>

<a asp-action="Create" class="btn btn-outline-success mb-3">Create transaction</a>

@if (Model.Any())
{
    <table class="table">
        <thead class="table table-dark">
            <tr>
                <th>Actions</th>
                <th>Description</th>
                <th>Total</th>
                <th>Account</th>
                <th>Category</th>
                <th>Transaction Date</th>
            </tr>
        </thead>
        <tbody id="reordenable">
            @foreach (var transactions in Model)
            {
                <tr>
                    <td>
                        <a class="sizeFooter" asp-action="Modify" asp-route-id="@transactions.Id"><img src="https://cdn-icons-png.flaticon.com/128/6323/6323478.png" /></a>
                        <a class="sizeFooter" asp-action="Delete" asp-route-id="@transactions.Id"><img src="https://cdn-icons-png.flaticon.com/128/6805/6805398.png" /></a>
                    </td>
                    <td>
                        @transactions.Description
                    </td>
                    <td>
                        @transactions.Total
                    </td>
                    <td>
                        @transactions.AccountId
                    </td>
                    <td>
                        @transactions.CategoryId
                    </td>
                    <td>
                        @transactions.TransactionDate.ToString("dddd, dd MMMM yyyy")
                    </td>
                </tr>
            }
        </tbody>
    </table>
}@if (!Model.Any())
{
    <h1>
        No results
    </h1>
}



