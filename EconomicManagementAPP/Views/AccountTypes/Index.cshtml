@model IEnumerable<AccountTypes>

@{
    ViewData["Title"] = "Account Types";
}

<h1 class="text-center">List of Account Types</h1>

<a asp-action="Create" class="btn btn-success mb-3">Crear Account Types</a>

@if(Model.Any()){
<table class="table table-primary">
    <thead>
        <tr>
            <th>Actions</th>
            <th>Name</th>
        </tr>
    </thead>
    <tbody id="reordenable">
        @foreach (var accountTypes in Model)
        {
            <tr>
                <td>
                    <input type="hidden" value="@accountTypes.Id" class="ids" />
                    <a class="sizeFooter" asp-action="Modify" asp-route-id="@accountTypes.Id"><img src="https://cdn-icons-png.flaticon.com/128/6323/6323478.png" /></a>
                    <a class="sizeFooter" asp-action="Delete" asp-route-id="@accountTypes.Id"><img src="https://cdn-icons-png.flaticon.com/128/6805/6805398.png" /></a>
                </td>
                <td>
                    @accountTypes.Name
                </td>

            </tr>
        }
    </tbody>
</table>
}@if(!Model.Any()){
    <h1>
        No results
    </h1>
}